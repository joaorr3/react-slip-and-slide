{
  "name": "native",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/native/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/native",
        "main": "packages/native/src/index.ts",
        "tsConfig": "packages/native/tsconfig.lib.json",
        "assets": ["packages/native/*.md"],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "excludeDeps": ["core-js", "@react-spring/web", "react-dom", "tslib"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs native {args.ver} {args.tag} {args.otp}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/native/**/*.ts"]
      }
    }
  },
  "tags": []
}
