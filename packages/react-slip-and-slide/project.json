{
  "name": "react-slip-and-slide",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react-slip-and-slide/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/react-slip-and-slide",
        "main": "packages/react-slip-and-slide/src/index.ts",
        "tsConfig": "packages/react-slip-and-slide/tsconfig.lib.json",
        "assets": ["packages/react-slip-and-slide/*.md"],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "clean": false,
        "excludeDeps": [
          "react-dom",
          "tslib",
          "@react-spring/native",
          "@react-spring/shared",
          "@react-spring/web",
          "@use-gesture/react",
          "core-js",
          "dequal",
          "immer",
          "lodash",
          "react",
          "react-dom",
          "react-is",
          "react-native",
          "react-native-gesture-handler",
          "react-spring",
          "rxjs",
          "styled-components",
          "lethargy-ts"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs react-slip-and-slide {args.ver} {args.tag} {args.otp}"
      },
      "dependsOn": ["build", "esbuild"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/react-slip-and-slide/**/*.ts"]
      }
    },
    "esbuild": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "main": "packages/react-slip-and-slide/src/index.ts",
        "tsConfig": "packages/react-slip-and-slide/tsconfig.lib.json",
        "outputPath": "dist/packages/react-slip-and-slide",
        "outputFileName": "react-slip-and-slide.browser.esm.js",
        "format": ["esm"],
        "skipTypeCheck": true,
        "platform": "browser",
        "external": ["react", "react-dom"],
        "generatePackageJson": false,
        "deleteOutputPath": false,
        "esbuildOptions": {
          "conditions": ["module", "import"],
          "mainFields": ["module", "main"],
          "jsx": "automatic",
          "define": {
            "process.env.NODE_ENV": "'production'"
          }
        }
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    }
  },
  "tags": []
}
